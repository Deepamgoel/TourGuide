<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_24"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_shop_image_view"
            style="@style/ItemImageView"
            android:contentDescription="@string/item_image"
            tools:src="@drawable/wallpaper" />

        <TextView
            android:id="@+id/item_shop_title_text_view"
            style="@style/ItemTextView"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="@dimen/sp_24"
            tools:text="Chandni Chowk" />

        <TextView
            android:id="@+id/item_shop_description_short_text_view"
            style="@style/ItemTextView"
            android:layout_marginTop="0dp"
            tools:text="Flea &amp; Street Markets" />

        <TextView
            android:id="@+id/item_shop_more_button"
            style="@style/ItemButtonTextView"
            android:text="@string/more" />

        <TextView
            android:id="@+id/item_shop_description_long_text_view"
            style="@style/ItemTextView"
            tools:text="This historic market has existed for hundreds of years â€” since merchants from China and Europe first arrived and began to sell their wares in India. A real treasure trove for shoppers, the market is helpfully divided into bazaars with different areas of specialization: fabrics in Katra Neel, silver in Dariba Kalan, needlework in Kinari Bazaar, and electronics in Bhagirath Palace." />

    </LinearLayout>

</android.support.v7.widget.CardView>