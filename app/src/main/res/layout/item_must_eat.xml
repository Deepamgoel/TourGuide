<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_eat_title_text_view"
                style="@style/ItemTextView"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textSize="@dimen/sp_24"
                tools:text="Choley Bhature" />

            <TextView
                android:id="@+id/item_eat_restaurant_text_view"
                style="@style/ItemTextView"
                tools:text="at Old Famous Jalebi Wala" />

        </LinearLayout>

        <ImageView
            android:id="@+id/item_eat_image_view"
            style="@style/ItemImageView"
            android:contentDescription="@string/item_image"
            tools:src="@drawable/wallpaper" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_24"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_eat_description_text_view"
                style="@style/ItemTextView"
                tools:text="If Choley Bhature and lassi is food anaesthesia, then this place will induce food coma!" />

            <TextView
                android:id="@+id/item_eat_price_text_view"
                style="@style/ItemTextView"
                tools:text="Price: Rs 500 per kg" />

            <TextView
                android:id="@+id/item_eat_where_text_view"
                style="@style/ItemTextView"
                tools:text="Where: 795, Dariba Kalan Road, Dariba Corner, Opposite to Central Baptist Church, Chandni chowk" />

            <TextView
                android:id="@+id/item_eat_timing_text_view"
                style="@style/ItemTextView"
                tools:text="Timings: 8 am to 10 pm" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>