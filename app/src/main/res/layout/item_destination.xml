<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_24"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_destination_image_view"
            style="@style/ItemImageView"
            android:contentDescription="@string/item_image"
            tools:src="@drawable/wallpaper" />

        <TextView
            android:id="@+id/item_destination_title_text_view"
            style="@style/ItemTextView"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="@dimen/sp_24"
            tools:text="The Red Fort" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/item_destination_rating_bar"
                style="@style/RatingBar"
                android:numStars="5"
                android:stepSize="0.5"
                tools:rating="4.5" />

            <TextView
                android:id="@+id/item_destination_rating_text_view"
                style="@style/ItemTextView"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:textSize="@dimen/sp_12"
                tools:text="4.4" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_destination_description_short_text_view"
            style="@style/ItemTextView"
            tools:text="Iconic 1600s imperial residence &amp; museum" />

        <TextView
            android:id="@+id/item_destination_more_button"
            style="@style/ItemButtonTextView"
            android:text="@string/more" />

        <TextView
            android:id="@+id/item_destination_description_long_text_view"
            style="@style/ItemTextView"
            tools:text="Landmark 17th-century Mughal fortress built in towering red sandstone, now a complex of museums." />

    </LinearLayout>

</android.support.v7.widget.CardView>